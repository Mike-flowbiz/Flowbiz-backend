generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model BusinessSetting {
  id             String   @id @default(uuid())
  companyName    String
  companyEmail   String?
  companyPhone   String?
  companyAddress String?
  vatNumber      String?
  vatRate        Float    @default(20.0)
  logo           String?
  primaryColor   String   @default("#3B82F6")
  secondaryColor String   @default("#1E40AF")
  bankName       String?
  accountNumber  String?
  sortCode       String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("business_settings")
}

model Client {
  id          String      @id @default(uuid())
  name        String
  email       String      @unique
  phone       String?
  address     String?
  companyName String?
  vatNumber   String?
  notes       String?
  isActive    Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  invoices    Invoice[]
  timesheets  Timesheet[]

  @@map("clients")
}

model Expense {
  id          String          @id @default(uuid())
  userId      String
  date        DateTime        @default(now())
  amount      Float
  category    ExpenseCategory @default(OTHER)
  description String
  receiptUrl  String?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  user        User            @relation(fields: [userId], references: [id])

  @@map("expenses")
}

model InvoiceItem {
  id          String   @id @default(uuid())
  invoiceId   String
  productId   String?
  description String
  quantity    Float
  unitPrice   Float
  amount      Float
  createdAt   DateTime @default(now())
  invoice     Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  product     Product? @relation(fields: [productId], references: [id])

  @@map("invoice_items")
}

model Invoice {
  id            String        @id @default(uuid())
  invoiceNumber String        @unique
  clientId      String
  userId        String
  issueDate     DateTime      @default(now())
  dueDate       DateTime
  status        InvoiceStatus @default(DRAFT)
  subtotal      Float
  vatAmount     Float
  vatRate       Float
  total         Float
  notes         String?
  pdfUrl        String?
  sentAt        DateTime?
  paidAt        DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  invoiceItems  InvoiceItem[]
  client        Client        @relation(fields: [clientId], references: [id], onDelete: Cascade)
  user          User          @relation(fields: [userId], references: [id])

  @@map("invoices")
}

model Product {
  id            String        @id @default(uuid())
  name          String
  description   String?
  type          ProductType   @default(SERVICE)
  price         Float
  unit          String        @default("hour")
  category      String?
  isActive      Boolean       @default(true)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  invoiceItems  InvoiceItem[]

  @@map("products")
}

model Timesheet {
  id          String    @id @default(uuid())
  userId      String
  clientId    String?
  date        DateTime  @default(now())
  hours       Float
  description String?
  isTimerMode Boolean   @default(false)
  startTime   DateTime?
  endTime     DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  client      Client?   @relation(fields: [clientId], references: [id])
  user        User      @relation(fields: [userId], references: [id])

  @@map("timesheets")
}

model User {
  id         String      @id @default(uuid())
  email      String      @unique
  password   String
  firstName  String
  lastName   String
  role       UserRole    @default(CONTRACTOR)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  expenses   Expense[]
  invoices   Invoice[]
  timesheets Timesheet[]

  @@map("users")
}

enum ExpenseCategory {
  TRAVEL
  SUPPLIES
  EQUIPMENT
  SOFTWARE
  MEALS
  OTHER
}

enum InvoiceStatus {
  DRAFT
  SENT
  PAID
  OVERDUE
  CANCELLED
}

enum ProductType {
  PRODUCT
  SERVICE
}

enum UserRole {
  ADMIN
  CONTRACTOR
  CLIENT
}
