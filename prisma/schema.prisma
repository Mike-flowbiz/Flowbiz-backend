generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model business_settings {
  id             String   @id
  companyName    String
  companyEmail   String?
  companyPhone   String?
  companyAddress String?
  vatNumber      String?
  vatRate        Float    @default(20.0)
  logo           String?
  primaryColor   String   @default("#3B82F6")
  secondaryColor String   @default("#1E40AF")
  bankName       String?
  accountNumber  String?
  sortCode       String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime
}

model clients {
  id          String       @id
  name        String
  email       String       @unique
  phone       String?
  address     String?
  companyName String?
  vatNumber   String?
  notes       String?
  isActive    Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime
  invoices    invoices[]
  timesheets  timesheets[]
}

model expenses {
  id          String          @id
  userId      String
  date        DateTime        @default(now())
  amount      Float
  category    ExpenseCategory @default(OTHER)
  description String
  receiptUrl  String?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime
  users       users           @relation(fields: [userId], references: [id])
}

model invoice_items {
  id          String    @id
  invoiceId   String
  productId   String?
  description String
  quantity    Float
  unitPrice   Float
  amount      Float
  createdAt   DateTime  @default(now())
  invoices    invoices  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  products    products? @relation(fields: [productId], references: [id])
}

model invoices {
  id            String          @id
  invoiceNumber String          @unique
  clientId      String
  userId        String
  issueDate     DateTime        @default(now())
  dueDate       DateTime
  status        InvoiceStatus   @default(DRAFT)
  subtotal      Float
  vatAmount     Float
  vatRate       Float
  total         Float
  notes         String?
  pdfUrl        String?
  sentAt        DateTime?
  paidAt        DateTime?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime
  invoice_items invoice_items[]
  clients       clients         @relation(fields: [clientId], references: [id], onDelete: Cascade)
  users         users           @relation(fields: [userId], references: [id])
}

model products {
  id            String          @id
  name          String
  description   String?
  type          ProductType     @default(SERVICE)
  price         Float
  unit          String          @default("hour")
  category      String?
  isActive      Boolean         @default(true)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime
  invoice_items invoice_items[]
}

model timesheets {
  id          String    @id
  userId      String
  clientId    String?
  date        DateTime  @default(now())
  hours       Float
  description String?
  isTimerMode Boolean   @default(false)
  startTime   DateTime?
  endTime     DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime
  clients     clients?  @relation(fields: [clientId], references: [id])
  users       users     @relation(fields: [userId], references: [id])
}

model users {
  id         String       @id
  email      String       @unique
  password   String
  firstName  String
  lastName   String
  role       UserRole     @default(CONTRACTOR)
  createdAt  DateTime     @default(now())
  updatedAt  DateTime
  expenses   expenses[]
  invoices   invoices[]
  timesheets timesheets[]
}

enum ExpenseCategory {
  TRAVEL
  SUPPLIES
  EQUIPMENT
  SOFTWARE
  MEALS
  OTHER
}

enum InvoiceStatus {
  DRAFT
  SENT
  PAID
  OVERDUE
  CANCELLED
}

enum ProductType {
  PRODUCT
  SERVICE
}

enum UserRole {
  ADMIN
  CONTRACTOR
  CLIENT
}
